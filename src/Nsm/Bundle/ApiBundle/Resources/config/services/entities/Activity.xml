<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="activity.entity.class">Nsm\Bundle\ApiBundle\Entity\Activity</parameter>
        <parameter key="activity.manager.class">Nsm\Bundle\ApiBundle\Entity\ActivityManager</parameter>
        <parameter key="activity.repository.class">Nsm\Bundle\ApiBundle\Entity\ActivityRepository</parameter>
        <parameter key="activity.subscriber.class">Nsm\Bundle\ApiBundle\EventListener\ActivitySubscriber</parameter>
    </parameters>

    <services>

        <service id="activity.repository" class="%activity.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>%activity.entity.class%</argument>
        </service>

        <service id="activity.manager" class="%activity.manager.class%">
            <argument>%activity.entity.class%</argument>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="activity.subscriber" class="%activity.subscriber.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>
        
    </services>
</container>
