<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="task.entity.class">Nsm\Bundle\ApiBundle\Entity\Task</parameter>
        <parameter key="task.manager.class">Nsm\Bundle\ApiBundle\Entity\TaskManager</parameter>
        <parameter key="task.repository.class">Nsm\Bundle\ApiBundle\Entity\TaskRepository</parameter>
        <parameter key="task.subscriber.class">Nsm\Bundle\ApiBundle\EventListener\TaskSubscriber</parameter>
    </parameters>

    <services>

        <service id="task.repository" class="%task.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>%task.entity.class%</argument>
        </service>

        <service id="task.manager" class="%task.manager.class%">
            <argument>%task.entity.class%</argument>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="task.subscriber" class="%task.subscriber.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

    </services>
</container>
