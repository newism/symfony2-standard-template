parameters:

    {{ bundle_config_namespace }}.entity.{{ variable_name }}.class: {{ namespace }}\Entity\{{ entity }}
    {{ bundle_config_namespace }}.entity.{{ variable_name }}_manager.class: {{ namespace }}\Entity\{{ entity }}Manager
    {{ bundle_config_namespace }}.entity.{{ variable_name }}_repository.class: {{ namespace }}\Entity\{{ entity }}Repository
    {{ bundle_config_namespace }}.event_subscriber.{{ variable_name }}_event_subscriber.class: {{ namespace }}\EventSubscriber\{{ entity }}Subscriber

services:

    {{ bundle_config_namespace }}.entity.{{ variable_name }}_manager:
        class: %{{ bundle_config_namespace }}.entity.{{ variable_name }}_manager.class%
        arguments: [%{{ bundle_config_namespace }}.entity.{{ variable_name }}.class%, @doctrine.orm.entity_manager]

    {{ bundle_config_namespace }}.entity.{{ variable_name }}_repository:
        class: %{{ bundle_config_namespace }}.entity.{{ variable_name }}_repository.class%
        factory_service: "doctrine.orm.entity_manager"
        factory_method: "getRepository"
        arguments: [%{{ bundle_config_namespace }}.entity.{{ variable_name }}.class%]

    {{ bundle_config_namespace }}.event_subscriber.{{ variable_name }}_event_subscriber:
        class: %{{ bundle_config_namespace }}.event_subscriber.{{ variable_name }}_event_subscriber.class%
        arguments: [@service_container]
        tags:
          - {name: "doctrine.event_subscriber", connection: "default"}
