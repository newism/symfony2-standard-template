<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

{% block body %}
    <route id="{{ route_name_prefix }}_browse" pattern="/">
        <default key="_controller">{{ bundle }}:{{ entity }}:browse</default>
    </route>

    <route id="{{ route_name_prefix }}_read" pattern="/{id}/read">
        <default key="_controller">{{ bundle }}:{{ entity }}:read</default>
    </route>

{% if 'edit' in actions %}
    <route id="{{ route_name_prefix }}_edit" pattern="/{id}/edit">
        <default key="_controller">{{ bundle }}:{{ entity }}:edit</default>
    </route>
{% endif %}

{% if 'add' in actions %}
    <route id="{{ route_name_prefix }}_add" pattern="/add">
        <default key="_controller">{{ bundle }}:{{ entity }}:add</default>
    </route>
{% endif %}

{% if 'destroy' in actions %}
    <route id="{{ route_name_prefix }}_destroy" pattern="/{id}/destroy">
        <default key="_controller">{{ bundle }}:{{ entity }}:destroy</default>
        <requirement key="_method">post|delete</requirement>
    </route>
{% endif %}
{% endblock body %}

</routes>
