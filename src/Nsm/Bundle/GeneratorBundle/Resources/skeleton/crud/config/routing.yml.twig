{% if 'browse' in actions %}
{{ route_name_prefix }}_browse:
    pattern:  /
    defaults: { _controller: "{{ bundle }}:{{ entity }}:browse" }
{% endif %}

{% if 'read' in actions %}
{{ route_name_prefix }}_read:
    pattern:  /{id}/read
    defaults: { _controller: "{{ bundle }}:{{ entity }}:read" }
{% endif %}

{% if 'edit' in actions %}
{{ route_name_prefix }}_edit:
    pattern:  /{id}/edit
    defaults: { _controller: "{{ bundle }}:{{ entity }}:edit" }
{% endif %}

{% if 'add' in actions %}
{{ route_name_prefix }}_add:
    pattern:  /new
    defaults: { _controller: "{{ bundle }}:{{ entity }}:add" }
{% endif %}

{% if 'delete' in actions %}
{{ route_name_prefix }}_destroy:
    pattern:  /{id}/destroy
    defaults: { _controller: "{{ bundle }}:{{ entity }}:destroy" }
    requirements: { _method: post|delete }
{% endif %}
