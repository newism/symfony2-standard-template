<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="project.entity.class">Nsm\Bundle\ApiBundle\Entity\Project</parameter>
        <parameter key="project.manager.class">Nsm\Bundle\ApiBundle\Entity\ProjectManager</parameter>
        <parameter key="project.repository.class">Nsm\Bundle\ApiBundle\Entity\ProjectRepository</parameter>
        <parameter key="project.subscriber.class">Nsm\Bundle\ApiBundle\EventSubscriber\ProjectSubscriber</parameter>
    </parameters>

    <services>

        <service id="project.repository" class="%project.repository.class%" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>%project.entity.class%</argument>
        </service>

        <service id="project.manager" class="%project.manager.class%">
            <argument>%project.entity.class%</argument>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="project.subscriber" class="%project.subscriber.class%">
            <argument type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

    </services>
</container>
